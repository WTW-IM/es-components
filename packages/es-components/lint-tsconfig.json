{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": false,
    "declarationDir": null,
    "noEmit": true
  },
  "include": ["*", "*.*", "**/*", "**/*.*"],
  "exclude": [
    "node_modules/",
    "dist/",
    "cjs/",
    "lib/",
    "bundle/",
    "docs/",
    "**/*.specs.ts",
    "**/*.specs.tsx"
  ]
}
