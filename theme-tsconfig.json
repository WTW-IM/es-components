{
  "extends": "./projects-tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "jsx": "react",
    "noImplicitAny": true,
    "paths": {
      "es-components-shared-types": ["./shared/types/src"],
      "react": ["./node_modules/@types/react"],
      "*": ["./node_modules/@types/*"]
    }
  },
  "include": ["*", "*.*", "**/*", "**/*.*"],
  "exclude": [
    "node_modules",
    "**/node_modules",
    "**/dist",
    "**/cjs",
    "**/lib",
    "**/bundle",
    "**/docs",
    "**/es-components/types",
    "**/*.specs.ts",
    "**/*.specs.tsx",
    "**/*.specs.js",
    "**/*.specs.jsx"
  ]
}
